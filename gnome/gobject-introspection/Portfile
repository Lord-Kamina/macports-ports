# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           meson 1.0
PortGroup           active_variants 1.1

name                gobject-introspection
version             1.62.0
set branch          [join [lrange [split ${version} .] 0 1] .]
categories          gnome
platforms           darwin
# library under LGPL-2+, tools under GPL-2+
license             {LGPL GPL-2+}
maintainers         {devans @dbevans} openmaintainer
description         GObject Introspection
long_description    Gobject Introspection acts as a bridge between low-level C+GObject code and \
                    a managed runtime (JavaScript, Python, Java, Lua, .NET, Scheme, etc.).

homepage            https://wiki.gnome.org/Projects/GObjectIntrospection
master_sites        gnome:sources/${name}/${branch}/
use_xz              yes

checksums           rmd160  d9f1d8b15259ca9e77c5103b3bf79df4f7976ee2 \
                    sha256  b1ee7ed257fdbc008702bdff0ff3e78a660e7e602efa8f211dc89b9d1e7d90a2 \
                    size    980732

depends_build-append port:pkgconfig

depends_lib         path:lib/pkgconfig/cairo.pc:cairo \
                    path:lib/pkgconfig/glib-2.0.pc:glib2 \
                    port:libffi

depends_run         bin:glibtool:libtool

build.post_args-append --verbose

variant python27 conflicts python35 python36 python37 python38 description {Build using Python 2.7} {
    configure.python        ${prefix}/bin/python2.7
    depends_lib-append      port:py27-mako \
                            port:py27-markdown
}

variant python35 conflicts python27 python36 python37 python38 description {Build using Python 3.5} {
    configure.python        ${prefix}/bin/python3.5
    depends_lib-append      port:py35-mako \
                            port:py35-markdown
}

variant python36 conflicts python27 python35 python37 python38 description {Build using Python 3.6} {
    configure.python        ${prefix}/bin/python3.6
    depends_lib-append      port:py36-mako \
                            port:py36-markdown
}

variant python37 conflicts python27 python35 python36 python38 description {Build using Python 3.7} {
    configure.python        ${prefix}/bin/python3.7
    depends_lib-append      port:py37-mako \
                            port:py37-markdown
}

variant python38 conflicts python27 python35 python36 python37 description {Build using Python 3.8} {
    configure.python        ${prefix}/bin/python3.8
    depends_lib-append      port:py38-mako \
                            port:py38-markdown
}

if {![variant_isset python27] && ![variant_isset python35] && ![variant_isset python36] && ![variant_isset python38]} { default_variants +python37 }

pre-configure {
if {![variant_isset python27]} {
    reinplace -W ${worksrcpath} "s|get_option('python')|'${configure.python}'|" meson.build
    }
}

pre-destroot {
    # https://bugzilla.redhat.com/show_bug.cgi?id=1691064
    # g-ir-scanner only works with the python3 version it was actually built with, for some reason.
    # Things depending on it but wanting to use Python 2.7 should be fine without patching this because Meson
    # is built against Python 3.7 and gobject-introspection depends on meson anyway.
    if {![variant_isset python27]} {
        if {[string first { } ${prefix}] != -1} {
            set python_exec "\/usr\/bin\/env [exec basename ${configure.python}]"
        } \
        else {
            set python_exec ${configure.python}
        }
        reinplace -W ${build.dir} "s|\/usr\/bin\/env python3|${python_exec}|" tools/g-ir-scanner tools/g-ir-annotation-tool
    }
}
